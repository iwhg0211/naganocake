<div class="container"> 
      
      <h3>新規会員登録</h3>
      
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
    <div class="row mt-5">
      
        <div class="col-lg-3">
          <p>名前</p>
        </div>  

        <div class="col-lg-3">    
            <div class="field">
              <%= f.label :last_name, "(性)" %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>
        </div>
        
        <div class="col-lg-3">
              <div class="field">
              <%= f.label :first_name, "(名)" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
        </div>
        
    </div>
        
    <div class="row mt-5">
        <div class="col-lg-3">
          <p>フリガナ</p>
        </div>
        
        <div class="col-lg-3">
              <div class="field">
              <%= f.label :last_name_kana, "(セイ)" %>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            </div>
        </div>
          
        <div class="col-lg-3">
            <div class="field">
              <%= f.label :first_name_kana, "(メイ)" %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
        </div>
        
    </div>
        

        
        <div class="field">
          <div class="row mt-5">
            <div class="col-lg-3">
              <%= f.label :email, "メールアドレス" %>
            </div>
            <div class="col-lg-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
        </div>
        
       
        <div class="field">
           <div class="row mt-5">
            <div class="col-lg-3">
              <%= f.label :postal_code, "郵便番号（ハイフンなし ７桁）" %>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>
          </div>
        </div>
        
        
        <div class="field">
          <div class="row mt-5">
            <div class="col-lg-3">
              <%= f.label :address, "住所" %>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
            </div>
          </div>
        </div>
        
        
        <div class="field">
          <div class="row mt-5">
            <div class="col-lg-3">
              <%= f.label :telephone_number, "電話番号（ハイフンなし 10-11桁）" %>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
            </div>
          </div>
        </div>
        
        
        <div class="field">
          <div class="row mt-5">
            <div class="col-lg-3">
              <%= f.label :password, "パスワード"%>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
            </div>
            <div class="col-lg-3">
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
        </div>
      
        
        <div class="field">
          <div class="row mt-5">
            <div class="col-lg-3">
              <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
            </div>
            <div class="col-lg-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
        </div>
      
      <div class="row mt-5">
        <div class="actions">
          <%= f.submit "新規登録", class:'btn btn-success' %>
        </div>
          <% end %>
      </div>
      
      <div class="row mt-5">
      <p>すでに登録済みの方</p>
      <%= link_to "こちら", customer_session_path(resource_name) %><p>からログインしてください。</p>
      </div>

</div>     