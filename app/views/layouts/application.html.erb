<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header>
       <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
        <div class="container">

         <%= link_to root_path, class:'navbar_brand' do %>
         <button type="button" class="btn btn-light">LOGO</button><% end %>

              <ul class="navbar nav-expand-lg list-unstyled">
              <% if admin_signed_in? %>
              <li>
                <%= link_to admin_items_path, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">商品一覧</button><% end %>
              </li>
              <li>
                <%= link_to admin_customers_path, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">会員一覧</button><% end %>
              </li>
              <li>
                <%= link_to admin_root_path, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">注文履歴一覧</button><% end %>
              </li>
              <li>
                <%= link_to admin_genres_path, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">ジャンル一覧</button><% end %>
              </li>
              <li>
                <%= link_to destroy_admin_session_path, method: :delete, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">ログアウト</button><% end %>
              </li>
              <% elsif customer_signed_in? %>
              <li>
                <%= link_to customer_path(current_customer.id), class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">マイページ</button><% end %>
              </li>
              <li>
                <%= link_to items_path, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">商品一覧</button><% end %>
              </li>
              <li>
                <%= link_to cart_items_path, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">カート</button><% end %>
              </li>
              <li>
                <%= link_to destroy_customer_session_path, method: :delete, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">ログアウト</button><% end %>              </li>
              <% else %>
              <li>
                <%= link_to about_path, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">About</button><% end %>
              </li>
              <li>
                <%= link_to items_path, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">商品一覧</button><% end %>
              </li>
              <li>
                <%= link_to new_customer_registration_path, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">新規登録</button><% end %>
              </li>
              <li>
                <%= link_to new_customer_session_path, class:'navbar_brand' do %>
                <button type="button" class="btn btn-light">ログイン</button><% end %>
              </li>
              <% end %>
              </ul>

         </div>
       </nav>
      </header>
    <%= yield %>
  </body>
</html>
